<div class="">
  <section class="login-user-form">
  <div class="login-icon text-light p-2 d-flex flex-column" style="background-color: #00ABB3; border-radius: 10px;">
    <i class="bi bi-person-circle"></i>
    <p class="login-user-tag"> Log In </p> 
  </div>
  <hr>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mb-3 d-flex justify-content-between align-items-center">
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <div>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-pasword-link"  %><br />
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="actions d-flex justify-content-center">
      <%= f.submit "Log in", class: "btn btn-success w-50" %>
    </div>
      <% end %> 
      <div class="d-flex justify-content-around mt-5 p-2" style="background-color: #EAEAEA; border-radius: 10px;">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Register", new_registration_path(resource_name), class: "signup-link" %><br />
      <% end %>
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation?", new_confirmation_path(resource_name), class: "didnt-receive-link" %><br />
      <% end %>
      </div>
  </section> 
</div>
