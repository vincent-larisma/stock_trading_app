<div class="container my-5">
  <div class="row">
    <table class="table table-bordered text-center">
      <thead>
        <tr class= "text-light" style="background-color: #3C4048;">
          <th scope="col">ID</th>
          <th scope="col">Email</th>
          <th scope="col">Role</th>
          <th scope="col">Approval</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
    <tbody class="table-group-divider">
    <% if @users.count > 0 %> 
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.email %></td>
          <td><%= user.role.capitalize %></td>
          <td><%= user.account_status.capitalize %></td>
          <td>
            <div class="d-flex flex-row justify-content-center gap-1">
              <%= link_to "Show", admin_user_path(user.id), class: "btn btn-primary"%> 
              <%= link_to "Edit", edit_admin_user_path(user.id), class: "btn btn-info" %> 
              <%= link_to "Delete", admin_user_path(user.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
      <% else %>
      <tr>
          <td colspan="6">
            <h2 class="m-5">No Records Found...</h2>
          </td>
      </tr>
      <% end  %>
    </tbody>
    </table>
  </div>
</div>

